<Window x:Class="TouchCafe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"     
        xmlns:MetroToolkit="clr-namespace:MetroToolkit;assembly=MetroToolkit"
        Title="MainWindow" Height="350" Width="525" 
        Style="{Binding Resource MetroWindow}"
        Foreground="{DynamicResource MetroText}"
        Background="Black" WindowState="Maximized">
    <i:Interaction.Behaviors>
        <MetroToolkit:BorderlessWindowBehavior/>
    </i:Interaction.Behaviors>
    <Grid Name="grid">
        
    </Grid>
</Window>
